<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2>Search results</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10">
        <p>
          <u>Bucket Name:</u> {{ bucket }}<br>
          <u>Prefix path:</u> {{ prefix }}</br>
          <u>Search term:</u> {{ search }}<br>
        </p>
      </div>
      <div class="col-sm-2">
        <a href="/"><button class="btn btn-sm btn-primary">New Search</button></a>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-condensed">
          <tr>
            <th>Key Name</th>
            <th>Last Modified</th>
            <th> </th>
          </tr>
          {{#if results}}
            {{#each results.Versions}}
              <tr>
                <td>{{ Key }}</td>
                <td>{{ dateFormater LastModified }}</td>
                <td><a href="{{ url }}"><button class="btn btn-danger btn-sm">Download</button></a></td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td>Sorry there are no results to display...</td>
              <td> </td>
              <td> </td>
            </tr>
          {{/if}}
        </table>
      </div>
    </div>
  </div>
</section>
