<section>
  <div class="container">
    <div class="col-sm-5 main-block upload">
      <h2>Upload to S3</h2>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="form-label">S3 Bucket</label>
          <select id="bucketName" name="bucketName" type="select" class="form-control" required>
            {{#each buckets.Buckets}}
              <option value="{{ Name }}">{{ Name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-12">
              <label class="form-label">S3 Key Name</label>
              <input id="keyName" name="keyName" type="text" class="form-control" required>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-12">
              <label class="form-label">File to upload</label>
              <input id="fileUpload" name="fileUpload" type="file" class="form-control" required>
            </div>
          </div>
        </div>
        <div class="form-group">
          <input type="submit" value="Upload" class="btn btn-danger">
        </div>
      </form>
    </div>
    <div class="col-sm-1"> </div>
    <div class="col-sm-5 main-block search">
      <h2>Search S3</h2>
      <form action="/search" method="get">
        <div class="form-group">
          <label class="form-label">S3 Bucket (Required)</label>
          <select type="select" class="form-control" id="bucketName" name="bucketName" required>
            {{#each buckets.Buckets}}
              <option value="{{ Name }}">{{ Name }}</option>
            {{/each}}
          </select>
        </div>
         <div class="form-group">
          <label class="form-label">Prefix Folder Path (Optional)</label>
          <input id="prefixPath" name="prefixPath" type="text" class="form-control" value="">
        </div>
        <div class="form-group">
          <label class="form-label">Search Query (Optional)</label>
          <input id="searchString" name="searchString" type="text" class="form-control" value="">
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-12">
              <label class="form-label">Date Range (Optional)</label>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p>Start Date:</p><input id="startDate" name="startDate" type="date" class="form-control">
            </div>
            <div class="col-sm-6">
              <p>End Date:</p><input id="endDate" name="endDate" type="date" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-info" type="submit">Search</button>
        </div>
      </form>
    </div>
  </div>
</section>
